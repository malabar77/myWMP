<Window x:Class="WMP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMP"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="21"/>
            <RowDefinition/>
            <RowDefinition Height="44"/>
        </Grid.RowDefinitions>
        <Menu x:Name="menu">
            <MenuItem Header="Menu" Height="21" Width="69.507">
                <MenuItem Header="Lecture" Name="Lecture" Click="Lecture_Click"/>
                <MenuItem Header="Pause" Name="Pause" Click="Pause_Click"/>
                <MenuItem Header="Stop" Name="Stop" Click="Stop_Click"/>
                <MenuItem Header="Parcourir" Name="Parcourir" Click="Parcourir_Click" />
            </MenuItem>
        </Menu>
        <Slider x:Name="trackwave" Margin="0,0,0,-3" Grid.Row="2" ValueChanged="slider_ValueChanged" HorizontalAlignment="Right" Width="90" Height="34" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="Timer" HorizontalAlignment="Left" Margin="91.038,0,0,18" Grid.Row="2" TextWrapping="Wrap" Text="--:--" Width="35.962" Height="13" VerticalAlignment="Bottom"/>
        <Image x:Name="image" Grid.Row="1" Margin="100,0,0,0"/>
        <ProgressBar Margin="132,0,95,13" Grid.Row="2" Height="18" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="Playlistview" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" Text="" Width="100" Margin="0,5,0,0" d:LayoutOverrides="HorizontalAlignment"/>
        <Button x:Name="Play" Content="►" HorizontalAlignment="Left" Margin="4.815,5,0,10" Grid.Row="2" Width="29" FontFamily="Arial Black" FontSize="24" Click="Play_Click"/>
        <Button x:Name="Pausebutton" Content="II" HorizontalAlignment="Left" Margin="38.815,5,0,10" Grid.Row="2" Width="29" FontWeight="Bold" FontSize="24" FontFamily="Arial Black" Click="Pause_Click"/>

    </Grid>
</Window>
